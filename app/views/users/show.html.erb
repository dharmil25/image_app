<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.albums.any? %>
      <h3>Albums (<%= @user.albums.count %>)</h3>
      <ol class="albums">
        <%= render @albums %>
      </ol>
    <% end %>
  </div>
</div>
