<li id="<%= album.id %>">
  <%= link_to gravatar_for(album.user, size: 50), album.user %>
  <span class="user">
  Owner: <%= link_to album.user.name, album.user %></span>
  <span class="content">
  Name: <%= album.name %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(album.created_at) %> ago.
    <% if current_user?(album.user) %>
      <%= link_to "delete", album, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>